{
  "name": "ai-workflows-helper",
  "publisher": "GlobalMaxima",
  "repository": {
    "type": "git",
    "url": "https://github.com/global-maxima/ai-workflows-helper--vscode-extension"
  },
  "displayName": "AI workflow helper",
  "description": "Allows users to select multiple files across multiple folders, right-click on them, and copy their contents into the clipboard as one text stream. Also supports automatic file inclusion and content synchronization.",
  "icon": "images/logo_rounded.png",
  "version": "0.0.7",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ai-workflows-helper--vscode-extension.copyFiles",
        "title": "Copy Files as Text Stream"
      },
      {
        "command": "ai-workflows-helper--vscode-extension.copyFilesAndFolders",
        "title": "Copy Files and Files in Folders as Text Stream"
      },
      {
        "command": "ai-workflows-helper--vscode-extension.scanIncludes",
        "title": "Scan File for Includes"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "explorerResourceIsFolder != true && resourceScheme == 'file'",
          "command": "ai-workflows-helper--vscode-extension.copyFiles",
          "group": "navigation@1"
        },
        {
          "when": "explorerResourceIsFolder == true && resourceScheme == 'file'",
          "command": "ai-workflows-helper--vscode-extension.copyFilesAndFolders",
          "group": "navigation@1"
        }
      ],
      "editor/context": [
        {
          "command": "ai-workflows-helper--vscode-extension.scanIncludes",
          "group": "navigation@2"
        }
      ]
    },
    "configuration": {
      "contributes": {
        "commands": [
          {
            "command": "ai-workflows-helper--vscode-extension.copyFiles",
            "title": "Copy Files as Text Stream"
          },
          {
            "command": "ai-workflows-helper--vscode-extension.copyFilesAndFolders",
            "title": "Copy Files and Files in Folders as Text Stream"
          },
          {
            "command": "ai-workflows-helper--vscode-extension.scanIncludes",
            "title": "Scan File for Includes"
          }
        ],
        "menus": {
          "explorer/context": [
            {
              "when": "explorerResourceIsFolder != true && resourceScheme == 'file'",
              "command": "ai-workflows-helper--vscode-extension.copyFiles",
              "group": "navigation@1"
            },
            {
              "when": "explorerResourceIsFolder == true && resourceScheme == 'file'",
              "command": "ai-workflows-helper--vscode-extension.copyFilesAndFolders",
              "group": "navigation@1"
            }
          ],
          "editor/context": [
            {
              "command": "ai-workflows-helper--vscode-extension.scanIncludes",
              "group": "navigation@2"
            }
          ]
        },
        "configuration": {
          "title": "AI Workflow Helper",
          "properties": {
            "aiWorkflowHelper.includePattern": {
              "type": "string",
              "default": "@include",
              "description": "Pattern to use for file inclusion (e.g., @include, #include)"
            },
            "aiWorkflowHelper.autoScanIncludes": {
              "type": "boolean",
              "default": true,
              "description": "Automatically scan files for includes when opened"
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.94.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "eslint": "^8.57.0",
    "esbuild": "^0.20.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.3.9"
  }
}